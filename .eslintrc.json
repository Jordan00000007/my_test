{
    "env": {
        "browser": true,
        "es6": true,
        "commonjs": true,
        "jquery": true
    },
    "extends": [
        "airbnb-base",
        "eslint:recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "allowImportExportEverywhere": true
    },
    "parser": "babel-eslint",
    "rules": {
        "no-param-reassign": 0,
        "no-bitwise":"off",
        "consistent-return":"off",
        "no-nested-ternary":"off",
        "no-plusplus":"off",
        "no-restricted-globals":"off",
        "func-names":"off",
        "no-alert":"off",
        "no-mixed-operators":"off",
        "linebreak-style":"off",
        "babel/new-cap": 1,
        "babel/camelcase": 1,
        "babel/no-invalid-this": 1,
        "babel/object-curly-spacing": 1,
        "babel/quotes": 0,
        "babel/semi": 1,
        "babel/no-unused-expressions": 1,
        "babel/valid-typeof": 1,
        "object-curly-spacing":"off"
    },
    "plugins": [
        "babel"
    ]
}